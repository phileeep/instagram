<%= @posts.each do |post|%>
  <div class="posts-wrapper d-flex justify-content-center">
    <div class="post">
    <a href="<%=post_path(post)%>">
      <%= image_tag(url_for(post.image), class: "post-picture") %>
      <p class="caption"><%= post.caption %></p>
    </a>
      <p class="posted-at">Posted <%= time_ago_in_words(post.created_at) %> ago</p>
    </div>
  </div>
<% end %>
